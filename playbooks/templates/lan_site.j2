server {
    listen [::]:80;
    listen 80;

    server_name {{ service_name }}.{{ ansible_facts['hostname'] }}.lan;

    error_log  /var/log/nginx/{{ service_name }}.{{ ansible_facts['hostname'] }}.lan.error.log;
    access_log /var/log/nginx/{{ service_name }}.{{ ansible_facts['hostname'] }}.lan.access.log;

    {{ custom_server_conf }}

    client_max_body_size 500M;

    location / {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_pass http://{{ proxy_host }}:{{ proxy_port }};
    }
}